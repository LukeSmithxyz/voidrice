# Find and use input "Microphone" for input
pcm.usb
{
    type hw
    card Microphone
}
pcm.!default
{
    type asym
    playback.pcm
    {
    	# Use the dmix plug to allow multiple outputs.
        type plug
        slave.pcm "dmix"
    }
    capture.pcm
    {
        type plug
        slave.pcm "usb"
    }
}
