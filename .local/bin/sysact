#!/bin/sh

# A dmenu wrapper script for system functions.

# For systemd-based systems.
case "$(readlink -f /sbin/init)" in
	*systemd*)
	slp="systemctl suspend -i"
	hib="systemctl suspend-then-hibernate -i"
	shut="systemctl poweroff -i"
	reb="systemctl reboot -i";;
esac

cmds="\
ğŸ”’ lock		slock
ğŸšª leave dwm	kill -TERM $(pgrep -u $USER "\bdwm$")
â™» renew dwm	kill -HUP $(pgrep -u $USER "\bdwm$")
ğŸ’¤ sleep	slock ${slp:-loginctl suspend -i}
ğŸ» hibernate	slock ${hib:-loginctl suspend-then-hibernate -i}
ğŸ”ƒ reboot	${reb:-loginctl reboot -i}
ğŸ–¥ shutdow	${shut:-systemctl poweroff -i}
ğŸ“º display off 	 xset dpms force off"

choice="$(echo "$cmds" | cut -d'	' -f 1 | dmenu)" || exit 1

`echo "$cmds" | grep "^$choice	" | cut -d '	' -f2-`
