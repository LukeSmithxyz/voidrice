#!/bin/sh

# Prints the current volume or ðŸ”‡ if muted.

case $BLOCK_BUTTON in
	1) setsid -f "$TERMINAL" -e pulsemixer ;;
	2) wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle ;;
	4) wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%+ ;;
	5) wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%- ;;
	3) notify-send "ðŸ“¢ Volume module" "\- Shows volume ðŸ”Š, ðŸ”‡ if muted.
- Middle click to mute.
- Scroll to change." ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

#echoing mute doenst work yet need help here
[ $(wpctl get-volume @DEFAULT_AUDIO_SINK@ | grep 'MUTED') = true ] && echo ðŸ”‡ && exit

vol="$(wpctl get-volume @DEFAULT_AUDIO_SINK@ | cut -d ':' -f 2)"

if [ "$vol" -gt "70" ]; then
	icon="ðŸ”Š"
elif [ "$vol" -lt "30" ]; then
	icon="ðŸ”ˆ"
else
	icon="ðŸ”‰"
fi

echo "$icon$vol%"
