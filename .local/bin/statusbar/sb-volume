#!/bin/sh

# Prints the current volume or ğŸ”‡ if muted. Also shows ğŸ™ï¸ if there's an unmuted microphone.

case $BLOCK_BUTTON in
	1) setsid -f "$TERMINAL" -e pulsemixer ;;
	2) pamixer -t ;;
	4) pamixer --allow-boost -i 1 ;;
	5) pamixer --allow-boost -d 1 ;;
	3) notify-send "ğŸ“¢ Volume module" "\- Shows volume ğŸ”Š, ğŸ”‡ if muted. Also shows ğŸ™ï¸ if there's an unmuted microphone.
- Middle click to mute.
- Scroll to change." ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

if [ $(pamixer --get-mute) = true ]; then
	icon="ğŸ”‡"
else
	vol="$(pamixer --get-volume)"

	if [ "$vol" -gt "70" ]; then
		icon="ğŸ”Š"
	elif [ "$vol" -lt "30" ]; then
		icon="ğŸ”ˆ"
	else
		icon="ğŸ”‰"
	fi
fi

# If the first source that is not a monitor is unmuted, print ğŸ™ï¸
source="$(pamixer --list-sources | awk '!/Built/{ cnt++ ; if (cnt == 2) print $1 }')"
[ "$(pamixer --source $source --get-mute)" = "false" ] && mic="ğŸ™ï¸"

# If the audio is not muted, add % to vol
[ ! -z "$vol" ] && vol="$vol%"
# Prints the info
printf "%s%s %s\n" "$icon" "$vol" "$mic"
