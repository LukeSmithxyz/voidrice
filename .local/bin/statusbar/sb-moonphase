#!/bin/sh

# Shows the current moon phase.

moonfile="${XDG_DATA_HOME:-$HOME/.local/share}/moonphase"

[ "$(stat -c %y "$moonfile" 2>/dev/null | cut -d' ' -f1)" = "$(date '+%Y-%m-%d')" ] ||
	{ [ -z "$(pgrep 'sb-moonphase' | tail -n +3)" ] &&
		( until { [ "$(cat /sys/class/net/w*/operstate)" = 'up' ] || [ "$(cat /sys/class/net/e*/operstate)" = 'up' ]; } &&
		curl -sf "wttr.in/?format=%m" --output "$moonfile" && touch "$moonfile"; do sleep 60; done &&
		pkill -RTMIN+"${1:-17}" "${STATUSBAR:-dwmblocks}" ) &
	echo; exit; }

icon="$(cat "$moonfile")"

case "$icon" in
	ðŸŒ‘) name="New" ;;
	ðŸŒ’) name="Waxing Crescent" ;;
	ðŸŒ“) name="First Quarter" ;;
	ðŸŒ”) name="Waxing Gibbous" ;;
	ðŸŒ•) name="Full" ;;
	ðŸŒ–) name="Waning Gibbous" ;;
	ðŸŒ—) name="Last Quarter" ;;
	ðŸŒ˜) name="Waning Crescent" ;;
	*) exit 1 ;;
esac

echo "${icon-?}"

case $BLOCK_BUTTON in
	3) notify-send "ðŸŒœ Moon phase module" "Displays current moon phase.
- ðŸŒ‘: New
- ðŸŒ’: Waxing Crescent
- ðŸŒ“: First Quarter
- ðŸŒ”: Waxing Gibbous
- ðŸŒ•: Full
- ðŸŒ–: Waning Gibbous
- ðŸŒ—: Last Quarter
- ðŸŒ˜: Waning Crescent" ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac
