#!/bin/sh

# Module showing network traffic. Shows how much data has been received (RX) or
# transmitted (TX) since the previous time this script ran. So if run every
# second, gives network traffic per second.

case "$BLOCK_BUTTON" in
	3) notify-send "ğŸŒ Network traffic module" "ğŸ”»: Traffic received
ğŸ”º: Traffic transmitted" ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

logfile="${XDG_CACHE_HOME:-$HOME/.cache}/netlog"
read -r rxprev txprev < "$logfile"

rxcurrent="$(($(paste -d '+' /sys/class/net/[ew]*/statistics/rx_bytes)))"
txcurrent="$(($(paste -d '+' /sys/class/net/[ew]*/statistics/tx_bytes)))"

printf "ğŸ”»%dKiB ğŸ”º%dKiB\\n" "$(((rxcurrent-rxprev)/1024))" "$(((txcurrent-txprev)/1024))"

echo "$rxcurrent $txcurrent" > "$logfile"
