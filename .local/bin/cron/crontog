#!/bin/sh

# Toggles all cronjobs off/on.
# Stores disabled crontabs in ~/.consaved until restored.

([ -f ${XDG_CONFIG_HOME:-$HOME/.config}/cronsaved ] && crontab - < ${XDG_CONFIG_HOME:-$HOME/.config}/cronsaved  && rm ${XDG_CONFIG_HOME:-$HOME/.config}/cronsaved && notify-send "ðŸ•“ Cronjobs re-enabled.") || ( crontab -l > ${XDG_CONFIG_HOME:-$HOME/.config}/cronsaved && crontab -r && notify-send "ðŸ•“ Cronjobs saved and disabled.")
