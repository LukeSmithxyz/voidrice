	1) notify-send "ðŸ–¥ CPU hogs" "$(ps axch -o cmd:15,%cpu | awk '{ arr[$1] += $2 }; END { for (i in arr) { print i,arr[i] } }' | sort -nrk2 | head -n10)" ;;
