#!/bin/sh

case $BLOCK_BUTTON in
	1) notify-send "ðŸ§  Memory hogs" "$(ps axch -o cmd:15,%mem | awk '{ arr[$1] += $2 }; END { for (i in arr) { print i,arr[i] } }' | sort -nrk2 | head -n10)" ;;
	3) notify-send "ðŸ§  Memory module" "\- Shows Memory Used/Total.
