#!/bin/sh
# Toggles all cronjobs off/on.
# Stores disabled crontabs in ~/.consaved until restored.

([ -f ~/.cronsaved ] && crontab - < ~/.cronsaved  && rm ~/.cronsaved && notify-send "ðŸ•“ Cronjobs re-enabled.") || ( crontab -l > ~/.cronsaved && crontab -r && notify-send "ðŸ•“ Cronjobs saved and disabled.")
